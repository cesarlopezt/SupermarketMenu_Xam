<?xml version="1.0" encoding="UTF-8"?>
<Frame xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SupermarketMenuPage.Views.MenuItemView">
    <StackLayout>
        <Image Source="{Binding Img}" WidthRequest="100" HeightRequest="100" HorizontalOptions="Center" />
        <Label Text="{Binding Title}" FontSize="Medium" FontAttributes="Bold" HorizontalTextAlignment="Center" />
        <Label Text="{Binding Description}" FontSize="Small" HorizontalOptions="Center" />
    </StackLayout>
</Frame>